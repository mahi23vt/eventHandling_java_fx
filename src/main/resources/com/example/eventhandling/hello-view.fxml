<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.eventhandling.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField fx:id="nameField" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
<!--    <Label fx:id="welcomeText"/>-->
    <Button fx:id="sayHello" text="Hello!" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#onButtonClicked"/>
    <Button fx:id="sayBye" text="Bye!" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#onButtonClicked"/>
</GridPane>
